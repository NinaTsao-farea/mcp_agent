# 開發環境變數設定檔案
# 複製此檔案為 .env 並填入實際值

# 應用程式設定
DEBUG=True
SECRET_KEY=dev-secret-key

# ===========================================
# 日誌設定
# ===========================================

# 日誌等級: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# 是否記錄到檔案
# true: 記錄到 logs/app.log（每日輪替，保留 30 天）
# false: 僅輸出到控制台
LOG_TO_FILE=true

# 資料庫設定
ORACLE_HOST=localhost
ORACLE_PORT=1521
ORACLE_SERVICE=XEPDB1
ORACLE_USER=your_oracle_user
ORACLE_PASSWORD=your_oracle_password

# Redis 設定
REDIS_URL=redis://localhost:6379

# Session 設定
SESSION_SECRET_KEY=your-session-secret-key
SESSION_EXPIRE_HOURS=8

# Azure OpenAI 設定
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-api-key
AZURE_OPENAI_API_VERSION=2024-02-01

# Azure AI Search 設定
AZURE_SEARCH_ENDPOINT=https://your-search.search.windows.net
AZURE_SEARCH_API_KEY=your-search-key
AZURE_SEARCH_INDEX_NAME=promotions-index

# ===========================================
# MCP Configuration (Sprint 3+)
# ===========================================

# 開發模式切換
# false: 使用 Mock Service (開發/測試) - 預設
# true: 使用 MCP Client Service
USE_MCP_CRM=false
USE_MCP_POS=false
USE_MCP_PROMOTION=false

# HTTP Transport 切換
# true: 使用 HTTP Transport (推薦) - 預設
# false: 使用 stdio Transport (Windows 有相容性問題)
USE_HTTP_TRANSPORT=true

# ===========================================
# MCP Server HTTP 端點設定
# ===========================================

# CRM MCP Server (Sprint 3) - Port 8001
CRM_MCP_HOST=0.0.0.0
CRM_MCP_PORT=8001
CRM_MCP_SERVER_URL=http://localhost:8001

# POS MCP Server (Sprint 4) - Port 8002
POS_MCP_HOST=0.0.0.0
POS_MCP_PORT=8002
POS_MCP_SERVER_URL=http://localhost:8002

# Promotion MCP Server (Sprint 5) - Port 8003
PROMOTION_MCP_HOST=0.0.0.0
PROMOTION_MCP_PORT=8003
PROMOTION_MCP_SERVER_URL=http://localhost:8003

# ===========================================
# MCP Server stdio 設定 (備用)
# ===========================================

# CRM MCP Server (Sprint 3)
MCP_CRM_COMMAND=python
MCP_CRM_ARGS=mcp_servers/crm_server.py
MCP_CRM_API_URL=https://crm.company.com/api
MCP_CRM_API_KEY=your_crm_api_key

# POS MCP Server (Sprint 4)
MCP_POS_COMMAND=python
MCP_POS_ARGS=mcp_servers/pos_server.py

# Promotion MCP Server (Sprint 5)
MCP_PROMOTION_COMMAND=python
MCP_PROMOTION_ARGS=mcp_servers/promotion_server.py

# CRM 整合設定 (舊版，保留相容性)
CRM_API_BASE_URL=https://your-crm-api.com
CRM_API_KEY=your-crm-key